<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0E191A"
    android:orientation="vertical"
    tools:context=".characters.NarutoUzumaki">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/naruto_uzumaki_big_id"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:contentDescription="@string/todo"
                app:srcCompat="@drawable/naruto_uzumaki_big" />

            <TextView
                android:id="@+id/ultimate_jutsus_5_star_id"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="16dp"
                android:background="#EE3E19"
                android:gravity="center"
                android:text="@string/ultimate_jutsus_5_star"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/naruto_uzumaki_ult1_artwork_id"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="-116dp"
                android:layout_marginTop="16dp"
                android:contentDescription="@string/todo"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/naruto_uzumaki_ult1_artwork" />

            <ImageView
                android:id="@+id/naruto_uzumaki_ult2_artwork_id"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-75dp"
                android:contentDescription="@string/todo"
                app:srcCompat="@drawable/naruto_uzumaki_ult2_artwork" />

            <ImageView
                android:id="@+id/naruto_uzumaki_ult3_artwork_id"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="116dp"
                android:layout_marginTop="-75dp"
                android:contentDescription="@string/todo"
                app:srcCompat="@drawable/naruto_uzumaki_ult3_artwork" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>